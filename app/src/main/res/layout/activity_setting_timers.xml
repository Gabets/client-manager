<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSetTimers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickAddTimer"
        android:text="@string/add_timer"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/btnText"
        tools:background="@color/btnBack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_timers"
        android:id="@+id/tvCurrentTimers"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/text"
        android:layout_marginBottom="10dp"
        />

    <ListView
        android:id="@+id/lvTimers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        >
    </ListView>


</LinearLayout>